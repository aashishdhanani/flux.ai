{
    "manifest_version": 3,
    "name": "Product Tracker",
    "version": "1.0",
    "description": "Tracks product information across various e-commerce platforms",
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "http://localhost:3000/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [{
      "matches": [
        "*://*.amazon.com/*",
        "*://*.ebay.com/*",
        "*://*.walmart.com/*",
        "*://*.bestbuy.com/*",
        "*://*.target.com/*"
      ],
      "js": ["content.js"]
    }]
  }
